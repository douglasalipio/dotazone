<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252628"
    android:gravity="center|top"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progress_video"
        style="@style/android:Widget.Holo.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_marginTop="-5dp"
        android:indeterminateOnly="false" />

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="60dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="-10dp"
        android:orientation="vertical"
        android:gravity="center|left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/first_video_title"
            android:textColor="#CD2C2C"
            android:textSize="18sp"
            android:text="Latest videos" />


    </LinearLayout>

    <View
        android:layout_width="325dp"
        android:layout_height="1dp"
        android:background="#3D3C41" />

    <ListView
        android:id="@+id/feed_video_on_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:listSelector="@drawable/listselector"
        android:layout_marginTop="10dp" />

</LinearLayout>