<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#222327"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#222327">

        <LinearLayout
            android:id="@+id/attribute1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/heroIconAttributeInt"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/heroes_icon_inteligence" />

                <TextView
                    android:id="@+id/heroTextAttributeInt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/heroTextAttributeAddInt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#00FF00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/heroIconAttibuteAgi"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/heroes_icon_agility" />

                <TextView
                    android:id="@+id/heroTextAttributeAgi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/heroTextAttributeAddAgi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#00FF00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/heroIconAttributeStr"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/heroes_icon_strenght" />

                <TextView
                    android:id="@+id/heroTextAttributeStr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/heroTextAttributeAddStr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#00FF00" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/attribute2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/heroIconAttributeAtk"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/heroes_atributes_attack" />

                <TextView
                    android:id="@+id/heroTextAttributeAtk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/heroTextAttributeAddAtk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#00FF00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/heroIconAttibuteMove"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/heroes_atributes_moviment" />

                <TextView
                    android:id="@+id/heroTextAttributeMove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/heroTextAttributeAddMove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#00FF00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/heroIconAttributeArmor"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/heroes_atributes_defence" />

                <TextView
                    android:id="@+id/heroTextAttributeArmor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/heroTextAttributeAddArmor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#00FF00" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/line_hero_attribute"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/attribute1"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/attribute1"
            android:layout_marginTop="12dp"
            android:background="@drawable/items_line" />

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/line_hero_attribute"
            android:layout_marginTop="2dp">

            <LinearLayout
                android:id="@+id/hero_skill_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal"></LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

</LinearLayout>
