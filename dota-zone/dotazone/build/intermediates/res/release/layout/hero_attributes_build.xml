<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222327"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#222327">

        <LinearLayout
            android:id="@+id/attribute1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="17dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hero_icon_attibute_int"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/heroes_icon_inteligence" />

                <TextView
                    android:id="@+id/hero_text_attribute_int"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/hero_text_attribute_add_int"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#00FF00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hero_icon_attibute_agi"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/heroes_icon_agility" />

                <TextView
                    android:id="@+id/hero_text_attribute_agi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/hero_text_attribute_add_agi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#00FF00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hero_icon_attibute_str"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/heroes_icon_strenght" />

                <TextView
                    android:id="@+id/hero_text_attribute_str"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/hero_text_attribute_add_str"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#00FF00" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/attribute2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="75dp"
            android:layout_marginTop="17dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hero_icon_attibute_atk"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/heroes_atributes_attack" />

                <TextView
                    android:id="@+id/hero_text_attribute_atk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/hero_text_attribute_add_atk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="#00FF00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hero_icon_attibute_move"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/heroes_atributes_moviment" />

                <TextView
                    android:id="@+id/hero_text_attribute_move"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/hero_text_attribute_add_move"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#00FF00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hero_icon_attibute_armor"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/heroes_atributes_defence" />

                <TextView
                    android:id="@+id/hero_text_attribute_armor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/hero_text_attribute_add_armor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#00FF00" />
            </LinearLayout>
        </LinearLayout>


        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/line_hero_attribute"
            android:layout_marginTop="2dp">

            <LinearLayout
                android:id="@+id/hero_skill_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal"></LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_slot1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/layout_slot2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/build_hero_slot1"
            android:layout_width="58dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:background="@drawable/empty" />

        <ImageView
            android:id="@+id/build_hero_slot2"
            android:layout_width="58dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:background="@drawable/empty" />

        <ImageView
            android:id="@+id/build_hero_slot3"
            android:layout_width="58dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:background="@drawable/empty" />

        <ImageView
            android:id="@+id/build_hero_slot4"
            android:layout_width="58dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:background="@drawable/empty" />

        <ImageView
            android:id="@+id/build_hero_slot5"
            android:layout_width="58dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:background="@drawable/empty" />

        <ImageView
            android:id="@+id/build_hero_slot6"
            android:layout_width="58dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:background="@drawable/empty" />
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/project_news/oficial_android_studio/dota-zone/dota-zone/dotazone/src/main/res/layout/hero_attributes_build.xml -->