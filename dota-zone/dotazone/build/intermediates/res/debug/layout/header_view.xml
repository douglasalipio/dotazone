<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/menu_tab"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="202dp"
            android:background="@drawable/header_bg" />

        <TextView
            android:id="@+id/textNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/header_imageLogo"
            android:layout_width="133dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/textNews"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/about_logo_dotazone" />

        <ImageView
            android:id="@+id/header_imageMenu"
            android:layout_width="14dp"
            android:layout_height="19dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/imageLogo"
            android:layout_marginTop="18dp"
            android:src="@drawable/news_menu" />
    </RelativeLayout>

