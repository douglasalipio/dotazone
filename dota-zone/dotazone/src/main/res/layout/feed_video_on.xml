<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#313234"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progress_video"
        style="@style/android:Widget.Holo.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_marginTop="-5dp"
        android:indeterminateOnly="false" />

    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:background="#252628"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="9dp"
        android:orientation="vertical"
        android:gravity="center|left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/first_video_title"
            android:layout_marginLeft="10dp"
            android:textColor="#CD2C2C"
            android:textSize="18sp"
            android:text="Latest videos"/>



    </LinearLayout>

    <ListView
        android:id="@+id/feed_video_on_list"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="10dp">
    </ListView>


</LinearLayout>