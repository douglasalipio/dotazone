<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/roshan_bg">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:gravity="center"
        android:id="@+id/roshan_countdown_layout">
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/roshan_view_text"
            android:layout_width="333dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/waiting_roshan"
            android:textColor="#3c4047"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/roshan_view_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="107sp"
            android:gravity="center"
            android:textColor="#3c4047"
            android:text="11:00"/>
    </LinearLayout>

        <ImageButton
            android:id="@+id/roshan_view_btn_vibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_vibrate"
            android:layout_below="@+id/roshan_countdown_layout"
            android:layout_alignRight="@+id/roshan_countdown_layout"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"/>

        <ImageButton
            android:id="@+id/roshan_view_btn_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_play"
            android:layout_below="@+id/roshan_countdown_layout"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/roshan_view_btn_silence"
            android:layout_marginLeft="50dp"
            android:background="@drawable/ic_bell"
            android:layout_alignBottom="@+id/roshan_view_btn_vibration"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

</RelativeLayout>
