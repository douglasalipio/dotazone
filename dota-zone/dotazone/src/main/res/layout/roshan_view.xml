<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/roshan_bg">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"
        android:id="@+id/roshan_countdown_layout">
        <TextView
            android:id="@+id/roshan_view_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/roshan_go_to_roshan"
            android:textColor="#3c4047"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/roshan_view_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="80sp"
            android:layout_marginLeft="60dp"
            android:textColor="#3c4047"
            android:text="10:59"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_below="@+id/roshan_countdown_layout"
        android:layout_alignLeft="@+id/roshan_countdown_layout"
        android:layout_alignStart="@+id/roshan_countdown_layout">

        <ImageView
            android:id="@+id/roshan_view_vibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="48dp"
            android:background="@drawable/roshan_vibration_selector"/>

        <ImageView
            android:id="@+id/roshan_view_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="68dp"
            android:background="@drawable/roshan_stop_selector"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/roshan_view_silence"
            android:background="@drawable/roshan_alarm_selector"/>

    </LinearLayout>
</RelativeLayout>
