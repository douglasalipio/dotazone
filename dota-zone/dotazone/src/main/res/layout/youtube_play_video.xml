<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#313234"
    android:gravity="center|top"
    android:orientation="vertical">

    <FrameLayout
        android:background="#FFFFFF"
        android:id="@+id/youtube_play_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="80dp"
        android:background="#252628"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="aaaaaaaaaaa"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:id="@+id/first_video_title" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="11sp"
            android:text="bbbbbbbbb"
            android:layout_marginBottom="10dp"
            android:textColor="#5f5f5f"
            android:layout_height="wrap_content"
            android:id="@+id/first_video_date"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/first_video_title"
            android:layout_alignStart="@+id/first_video_title" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#252628"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:gravity="center|left">

        <ListView
            android:layout_marginTop="10dp"
            android:id="@+id/youtube_play_list"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="1dp" />
    </LinearLayout>


</LinearLayout>